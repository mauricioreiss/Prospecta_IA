# =====================================================
# PROSPECTA IA - Environment Variables
# Copy to .env and fill in your values
# =====================================================

# ===========================================
# App Configuration
# ===========================================
APP_NAME=Prospecta IA
APP_VERSION=2.0.0

# ===========================================
# External APIs (Required)
# ===========================================
SUPABASE_URL=https://xxxxx.supabase.co
SUPABASE_KEY=eyJxxx...
APIFY_TOKEN=apify_api_xxx
OPENAI_API_KEY=sk-xxx

# ===========================================
# Optional APIs (Enhanced Features)
# ===========================================
# Tavily - Real-time company research for icebreakers
TAVILY_API_KEY=tvly-xxx

# Vapi - Voice AI for calls
VAPI_API_KEY=xxx-xxx-xxx

# ===========================================
# n8n + Chatwoot Integration (WhatsApp)
# ===========================================
# n8n webhook URL for triggering workflows
N8N_WEBHOOK_URL=https://n8n.your-domain.com/webhook/prospecta

# Chatwoot configuration for WhatsApp messaging
CHATWOOT_URL=https://chat.byduo.com.br
CHATWOOT_TOKEN=your_chatwoot_token_here
CHATWOOT_ACCOUNT_ID=1
CHATWOOT_INBOX_ID=366

# ===========================================
# AI Responder (Automatic WhatsApp responses)
# ===========================================
# Link to send when lead shows interest
BOOKING_LINK=https://calendly.com/oduo

# ===========================================
# Multi-tenant Table Names (optional)
# ===========================================
TABLE_LEADS=leads
TABLE_INTELLIGENCE=lead_intelligence
TABLE_INTERACTIONS=interactions
TABLE_CLIENTES=clientes_existentes
TABLE_WEBHOOK_LOGS=webhook_logs

# ===========================================
# Business Configuration
# ===========================================
NICHO_PADRAO=locadora

# ===========================================
# Deployment Configuration
# ===========================================
# Comma-separated list of allowed origins for CORS
ALLOWED_ORIGINS=http://localhost:3000,https://prospecta.vercel.app

# Debug mode (set to false in production)
DEBUG=false

# Port (auto-set by Railway/Render)
# PORT=8000
